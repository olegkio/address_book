<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Email 1</th>
      <th>Email 2</th>
      <th>Email 3</th>
      <th>Phone cell</th>
      <th>Phone home</th>
      <th>Phone work</th>
      <th>Phone other</th>
      <th>Fax</th>
      <th>Address</th>
      <th>Address 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Birthday</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.first_name %></td>
        <td><%= contact.middle_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email_1 %></td>
        <td><%= contact.email_2 %></td>
        <td><%= contact.email_3 %></td>
        <td><%= contact.phone_cell %></td>
        <td><%= contact.phone_home %></td>
        <td><%= contact.phone_work %></td>
        <td><%= contact.phone_other %></td>
        <td><%= contact.fax %></td>
        <td><%= contact.address %></td>
        <td><%= contact.address_2 %></td>
        <td><%= contact.city %></td>
        <td><%= contact.state %></td>
        <td><%= contact.zip %></td>
        <td><%= contact.birthday %></td>
        <td><%= contact.notes %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

